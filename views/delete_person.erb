<h1><%= @person['name'] %></h1>

<h3>Tasks</h3>
  <ul>
    <% @tasks.each do |task| %>
      <li><a href="/task/<%= task['id'] %>"><%= task['name'] %></a></li>
    <% end %>
  </ul>

<form action="/people/<%= @person['id'] %>/delete" method="post">
  <div class="warning">Warning: any tasks assigned to this person will be removed!</div></br>
  <button>Delete person</button><br>
</form>