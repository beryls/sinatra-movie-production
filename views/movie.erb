<h1><%= @movie['name'] %></h1>

<p>Director: <%= @movie['director'] %></p>
<p>Release date: <%= @movie['release_date'] %></p>

<h3>Tasks</h3>
  <ul>
    <% @tasks.each do |task| %>
      <li><a href="/task/<%= task['id'] %>"><%= task['name'] %></a></li>
    <% end %>
  </ul>

